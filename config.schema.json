{
  "pluginAlias": "MATouch",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Mitsubishi MA Touch"
      },
      "pin": {
        "title": "PIN",
        "type": "integer",
        "required": true,
        "default": "0000",
        "description": "The same PIN must be used for all thermostats."
      },
      "stopScan": {
        "title": "Stop Scan",
        "type": "boolean",
        "required": true,
        "default": false,
        "description": "Stop thermostat discovery after 30 seconds."
      }
    }
  }
}
